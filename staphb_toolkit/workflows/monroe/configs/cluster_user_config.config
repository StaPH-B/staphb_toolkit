//#########################
//####Docker Containers####
//#########################
mafft_container = 'staphb/mafft:7.450'
snp_dists_container = 'staphb/snp-dists:0.6.2'
iqtree_container = 'staphb/iqtree:1.6.7'
render_container = 'staphb/cluster-report-env:1.0'

//#####################
//###Pipeline Params###
//#####################

//iqTree
params.iqtree_model="GTR+G4"
params.iqtree_boostraps=1000

process {
  //stageInMode = "link" //uncomment for singularity

  //executor = 'awsbatch' //uncomment for AWS Batch
  //queue = '' //uncomment for AWS Batch

  errorStrategy = 'retry'
  maxRetries = 1

  cpus = 2
  memory = '2 GB'

  withName:msa{
    cpus = 7
    memory = '32 GB'
    container = mafft_container
  }
  withName:snp_matrix{
    cpus = 2
    memory = '2 GB'
    container = snp_dists_container
  }
  withName:iqtree{
    cpus = 8
    memory = '4 GB'
    container = iqtree_container
  }
  withName:render{
    cpus = 2
    memory = '2 GB'
    container = render_container
  }
}
