//#########################
//###Pipeline Parameters###
//#########################
//PreProcessing
params.name_split_on="_"

//Trimming
params.minlength=75
params.windowsize=4
params.qualitytrimscore=30
threads=4


//#######################
//###Pipeline Profiles###
//#######################

profiles {
  docker {
    includeConfig 'configs/docker.config'
  }
  aws {
    includeConfig 'configs/aws_batch.config'
  }
  singularity {
    includeConfig 'configs/singularity.config'
  }
}
