bwa_container = 'staphb/bwa:0.7.17'
seqyclean_container = 'staphb/seqyclean:1.10.09'
fastqc_container = 'staphb/fastqc:0.11.8'
samtools_container = 'staphb/samtools:1.11'
mafft_container = 'staphb/mafft:7.475'
snpdists_container = 'staphb/snp-dists:0.6.2'
ivar_container = 'staphb/ivar:1.2.2_artic20200528'
bcftools_container = 'staphb/bcftools:1.11'
kraken2_container = 'staphb/kraken2:2.1.1-no-db'
bedtools_container = 'staphb/bedtools:2.29.2'
pangolin_container = 'staphb/pangolin:2.0.5'
lightweight_container = 'staphb/parallel-perl:20200722'
iqtree_container = 'staphb/iqtree:1.6.7'

process {
  withName:prepare_reference{
    container = bwa_container
  }
  withName:seqyclean{
    container = seqyclean_container
  }
  withName:fastqc{
    container = fastqc_container
  }
  withName:bwa{
    container = bwa_container
  }
  withName:sort{
    container = samtools_container
  }
  withName:ivar_trim{
    container = ivar_container
  }
  withName:samtools_trim{
    container = samtools_container
  }
  withName:ivar_variants{
    container = ivar_container
  }
  withName:ivar_consensus{
    container = ivar_container
  }
  withName:bcftools_variants{
    container = bcftools_container
  }
  withName:samtools_stats{
    container = samtools_container
  }
  withName:samtools_coverage{
    container = samtools_container
  }
  withName:samtools_flagstat{
    container = samtools_container
  }
  withName:kraken2{
    container = kraken2_container
  }
  withName:bedtools{
    container = bedtools_container
  }
  withName:samtools_ampliconstats{
    container = samtools_container
  }
  withName:pangolin{
    container = pangolin_container
  }
  withName:summary{
    container = lightweight_container
  }
  withName:combined_summary{
    container = lightweight_container
  }
  withName:mafft{
    container = mafft_container
  }
  withName:snpdists{
    container = snpdists_container
  }
  withName:iqtree{
    container = iqtree_container
  }
  withName:rename_fastq{
    container = lightweight_container
  }
  withName:prepare_gisaid{
    container = lightweight_container
  }
  withName:prepare_genbank{
    container = lightweight_container
  }
  withName:combine_gisaid{
    container = lightweight_container
  }
  withName:combine_genbank{
    container = lightweight_container
  }
}
